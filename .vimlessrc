source ~/.vimrc

" Status line
set laststatus=0
set cmdheight=1
set nomodifiable " Only in version 6.0
set readonly

" Turn syntax on
syntax enable

" No menu bar and tool bar
set guioptions=aiMr
set showtabline=0
let g:airline#extensions#tabline#enabled=0

" Key bindings.
set timeoutlen=0
nnoremap d <C-d>
nnoremap u <C-u>
nmap b <C-b><C-g>
nmap q :q!<CR>

" To type the following line, type *two* C-V's followed by two spaces. This
" is how you map the spacebar.
nmap ^V <C-f><C-g>
nmap <Space> <C-f>
